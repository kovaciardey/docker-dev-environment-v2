# ==============================================
# Symfony Development Environment Configuration
# ==============================================

# Copy this file to .env and customize as needed
# The dev.py init command will handle this automatically

# ---------------------------------------------
# User ID Mapping (for permission management)
# ---------------------------------------------
# These will be auto-detected by dev.py init
# USER_ID=1000
# GROUP_ID=1000

# ---------------------------------------------
# Symfony Configuration
# ---------------------------------------------
APP_ENV=dev
APP_SECRET=your-secret-key-change-in-production

# ---------------------------------------------
# MySQL Database Configuration
# ---------------------------------------------
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=symfony
MYSQL_USER=symfony
MYSQL_PASSWORD=symfony
MYSQL_PORT=3306

# ---------------------------------------------
# Port Mapping (customize to avoid conflicts)
# ---------------------------------------------
NGINX_PORT=8080
PHPMYADMIN_PORT=8081

# ---------------------------------------------
# GitHub Repository (for dev init)
# ---------------------------------------------
GITHUB_REPO=https://github.com/yourusername/symfony-api.git
GITHUB_BRANCH=main
